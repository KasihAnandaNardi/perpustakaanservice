pipeline {
    agent any

    environment {
        // --- KONFIGURASI DOCKER HUB (WAJIB GANTI) ---
        DOCKER_REGISTRY_USER = 'kasih04'
        
        // Nama Image di Docker Hub (kasih04/buku-service)
        SERVICE_NAME         = 'buku-service'
        IMAGE_TAG            = '1.0'
        
        // Gabungan nama image lengkap
        FULL_IMAGE_NAME      = "${DOCKER_REGISTRY_USER}/${SERVICE_NAME}:${IMAGE_TAG}"
        
        // ID Credential di Jenkins
        DOCKER_CRED_ID       = 'docker-hub-credentials'

        // --- KONFIGURASI KUBERNETES ---
        // Folder source code (Sesuai script Anda tadi)
        PROJECT_DIR    = 'PerpustakaanService/bukuservice' 
        
        // Nama Deployment & Container di file YAML Kubernetes
        K8S_DEPLOYMENT = 'buku-deployment'
        K8S_NS         = 'perpustakaan-ns'
        CONTAINER_NAME = 'buku-container'
    }

    // Menggunakan tool Maven 'maven-3' yang sudah Anda setting
    tools {
        maven 'maven-3'
    }

    stages {
        // Stage 'Initialize' DIHAPUS karena butuh akses root (sudo) yang tidak dimiliki Jenkins.
        // Jenkins/Docker plugin biasanya sudah menyediakan tool yang dibutuhkan.

        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Build Maven') {
            steps {
                dir("${PROJECT_DIR}") {
                    // Menggunakan 'mvn' global
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Build & Push Docker') {
            steps {
                dir("${PROJECT_DIR}") {
                    script {
                        // Fitur Login Otomatis ke Docker Hub (Lebih aman dari docker push manual)
                        docker.withRegistry('', DOCKER_CRED_ID) {
                            
                            echo "Building image: ${FULL_IMAGE_NAME}"
                            def customImage = docker.build(FULL_IMAGE_NAME)
                            
                            echo "Pushing image to Docker Hub..."
                            customImage.push()
                        }
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    echo "Updating Kubernetes Deployment..."
                    
                    // 1. Update image di deployment ke versi kasih04
                    sh """
                    kubectl set image deployment/${K8S_DEPLOYMENT} \
                    ${CONTAINER_NAME}=${FULL_IMAGE_NAME} \
                    -n ${K8S_NS}
                    """
                    
                    // 2. Restart Deployment agar perubahan diterapkan
                    sh "kubectl rollout restart deployment/${K8S_DEPLOYMENT} -n ${K8S_NS}"
                    
                    // 3. Tunggu sampai deployment sukses
                    sh "kubectl rollout status deployment/${K8S_DEPLOYMENT} -n ${K8S_NS}"
                }
            }
        }
    }
    
    post {
        always {
            // Bersihkan sisa build docker
            sh 'docker image prune -f'
        }
    }
}