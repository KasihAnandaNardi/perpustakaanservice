pipeline {
    agent any

    environment {
        // --- KONFIGURASI DOCKER HUB (WAJIB GANTI LOCALHOST KE INI) ---
        DOCKER_REGISTRY_USER = 'kasih04' 
        
        // Nama image (sesuai yang ada di YAML Kubernetes Anda)
        SERVICE_NAME         = 'anggota-service'
        IMAGE_TAG            = '1.0'
        
        // Hasil: kasih04/anggota-service:1.0
        FULL_IMAGE_NAME      = "${DOCKER_REGISTRY_USER}/${SERVICE_NAME}:${IMAGE_TAG}"
        
        // ID Credential di Jenkins (Username & Password Docker Hub)
        DOCKER_CRED_ID       = 'docker-hub-credentials'

        // --- KONFIGURASI KUBERNETES ---
        // Folder di mana pom.xml berada
        PROJECT_DIR    = 'PerpustakaanService/anggotaservice' 
        
        // Nama Deployment & Container di file YAML Kubernetes
        K8S_DEPLOYMENT = 'anggota-deployment'
        K8S_NS         = 'perpustakaan-ns'
        CONTAINER_NAME = 'anggota-container'
    }

    // Menggunakan tool Maven yang sudah Anda setting di Jenkins
    tools {
        maven 'maven-3'
    }

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Build Maven') {
            steps {
                dir("${PROJECT_DIR}") {
                    // Menggunakan 'mvn' global (karena pakai tool maven-3)
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Build & Push Docker') {
            steps {
                dir("${PROJECT_DIR}") {
                    script {
                        // Login ke Docker Hub menggunakan credential Jenkins
                        docker.withRegistry('', DOCKER_CRED_ID) {
                            
                            echo "Building image: ${FULL_IMAGE_NAME}"
                            def customImage = docker.build(FULL_IMAGE_NAME)
                            
                            echo "Pushing image to Docker Hub..."
                            // Ini akan push ke kasih04, bukan localhost
                            customImage.push()
                        }
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    echo "Updating Kubernetes Deployment..."
                    
                    // 1. Update image di deployment
                    sh """
                    kubectl set image deployment/${K8S_DEPLOYMENT} \
                    ${CONTAINER_NAME}=${FULL_IMAGE_NAME} \
                    -n ${K8S_NS}
                    """
                    
                    // 2. Restart Deployment agar perubahan diterapkan
                    sh "kubectl rollout restart deployment/${K8S_DEPLOYMENT} -n ${K8S_NS}"
                    
                    // 3. Tunggu sampai deployment sukses
                    sh "kubectl rollout status deployment/${K8S_DEPLOYMENT} -n ${K8S_NS}"
                }
            }
        }
    }
    
    post {
        always {
            // Bersihkan image sampah agar disk tidak penuh
            sh 'docker image prune -f'
        }
    }
}